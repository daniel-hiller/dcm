{
  "name": "dcm",
  "version": "1.0.5",
  "description": "Daniel's Connection Manager - SSH/RDP/VNC/AnyDesk/TeamViewer Manager with encrypted password storage",
  "main": "dist/main/index.js",
  "author": "Daniel Hiller",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "npm run build:main && cross-env NODE_ENV=development electron .",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "start": "electron .",
    "watch:main": "tsc -p tsconfig.main.json --watch"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.2.1",
    "electron-builder": "^24.9.1",
    "lucide-react": "^0.312.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.9",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.daniel.dcm",
    "productName": "DCM - Daniel's Connection Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/icon.ico",
        "to": "icon.ico"
      }
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://dcm.hillerdaniel.de/updates"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "publisherName": "Daniel"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "DCM",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeader": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "allowElevation": true
    }
  }
}
